{
    "compilerOptions": {
        "lib": ["ESNext"],
        "esModuleInterop": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "module": "CommonJS",
        "target": "ESNext",
        "resolveJsonModule": true,
        "strict": true,
        "declaration": true,
        "skipLibCheck": true,
        "removeComments": false,
        "emitDeclarationOnly": true,
    },
    "exclude": ["node_modules", "dist"],
    "include": ["src/**/*.json", "src/index.ts"]
}